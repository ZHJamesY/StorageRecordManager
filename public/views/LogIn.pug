doctype html 
html(lang='en')
    head 
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css")
        link(rel="stylesheet", href="./style/LogIn.css")
        script(src="https://code.jquery.com/jquery-3.6.3.min.js")
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js")
        script(src="./script/LogIn.js")
        title= title
    body#LoginPage 
        div#mainContent
            display messages
            h1= h1Message
            p(style='color:white; font-size:15px;')= logInMessage
            if query && query.error === 'unauthorized'
                p(style='color:white; font-size:15px;') Your session has expired, please sign in again.


            div
                //- log in 
                form(method='post', action='/login', class='form, text-center')
                    div
                        input#username.form-control(name='username', type='text', placeholder='Username')
                        input#password.form-control(name='password', type='password', placeholder='Password')

                    div(style='text-align: left;') 
                        input#showPassword(type='checkbox', name='showPassword') 
                        label(style='color:white; padding-left:5px; padding-bottom:5px;') Show Password


                    button.btn.btn-dark Log In


