doctype html 
html(lang='en')
    head 
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css")
        link(rel="stylesheet", href="./style/LogIn.css")
        script(src="https://code.jquery.com/jquery-3.6.3.min.js")
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js")
        script(src="./script/LogIn.js")
        title= title
    body#LoginPage 
        div#mainContent
            button#langToggleBtn(style='position: fixed; top: 10px; right: 10px; width: 70px;', onclick='toggleLanguage()')=lang

            //- display messages
            h1(style='color:white;') Sample Company
            h1#errorMsg(style='font-size:15px; color:white')= h1Message
            h1#expiredMsg(style='font-size:15px; color:white')= h1expMessage

            div
                //- log in 
                form#loginForm(method='post', action='/login', class='form, text-center')
                    div
                        input#username.form-control(name='username', type='text', placeholder='Username')
                        input#password.form-control(name='password', type='password', placeholder='Password')

                    div(style='text-align: left;') 
                        input#showPassword(type='checkbox', name='showPassword') 
                        label#showPasswordLabel(style='color:white; padding-left:5px; padding-bottom:5px;') Show Password


                    button#loginBtn.btn.btn-dark(style='width:150px;') Log In





